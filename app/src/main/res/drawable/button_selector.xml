<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#D7BDE2" /> <!-- Change this color to your desired background color -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFD6D6D6" /> <!-- Change this color to your desired background color when pressed -->
        </shape>
    </item>
    <!-- Focused state (for accessibility) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA0A0A0" /> <!-- Change this color to your desired background color when focused -->
        </shape>
    </item>
</selector>