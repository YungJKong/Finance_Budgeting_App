<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpensesButton">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar"
        android:elevation="10dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back Button"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnBack"
            android:text="Select Category"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/expense"
        android:columnCount="3"
        android:gravity="center"
        android:padding="10dp"
        android:rowCount="6">


        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Food"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/food"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="Entertainment"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/entertainment"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Transportation"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/transport"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Utilities"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/utility"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Personal Care"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/care"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Healthcare"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/healthcare"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Education"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/education"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Debt"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/debt"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Taxes"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/tax"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Insurance"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/insurance"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button11"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Top Up"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/topup"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button12"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Wifi"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/wifi"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button13"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Car"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/car"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button14"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Pet"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/pet"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button15"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Social"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/social"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button16"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Other"
            android:textSize="12sp"
            android:background = "@drawable/box9"
            android:layout_margin="5dp"/>
    </GridLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>