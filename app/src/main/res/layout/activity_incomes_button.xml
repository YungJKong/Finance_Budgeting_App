<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomesButton">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar"
        android:elevation="10dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back Button"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnBack"
            android:text="Select Category"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/income"
        android:columnCount="3"
        android:gravity="center"
        android:padding="10dp"
        android:rowCount="4">


        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Salary"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/salary"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="Investment"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/investment"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Retirement"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/retirement"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Business"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/business"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Rental"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/rent"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Government"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/government"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Scholarship"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/scholarship"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Lottery"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/lottery"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Rental"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/car_rental"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="Other"
            android:onClick="onClick"
            android:textSize="12sp"
            android:background = "@drawable/box8"
            android:layout_margin="5dp" />
    </GridLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>