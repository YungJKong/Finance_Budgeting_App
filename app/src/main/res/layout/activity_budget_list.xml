<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llbudgetlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/budget_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar"
            android:elevation="10dp"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnbudgetlistBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="Back Button"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_budgetlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btnbudgetlistBack"
                android:text="Budget List"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/BudgetButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/box5"
            android:text="Create Budget"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/budgetListView"
            android:layout_width="match_parent"
            android:layout_height="502dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="16dp">

        </ListView>

    </LinearLayout>

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llbudgetlist"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="-1dp"/>

</RelativeLayout>